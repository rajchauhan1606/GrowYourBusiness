<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/frame12"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/border_frame"

        tools:context=".ui.activity.ImageCanvasActivity">

        <RelativeLayout
            android:id="@+id/fifth_frame_relative"
            android:layout_width="match_parent"

            android:layout_height="350dp">

            <RelativeLayout
                android:id="@+id/business_logo_relative"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/dimen_5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/simple_curved_relative_5dp">

                        <ImageView
                            android:id="@+id/business_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/brand_shaastra_logo" />

                    </RelativeLayout>

                </RelativeLayout>


                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_circuler_bg"
                    android:src="@drawable/_cancel"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/business_socialmedia_image_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/twitter_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:src="@drawable/ic_third_frame_twitter"
                    android:tint="@color/black" />

                <ImageView
                    android:id="@+id/instagram_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:src="@drawable/ic_third_frame_insta"
                    android:tint="@color/black" />

                <ImageView
                    android:id="@+id/facebook_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:src="@drawable/ic_third_frame_facebook"
                    android:tint="@color/black" />

                <ImageView
                    android:id="@+id/whatsapp_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:src="@drawable/ic_third_frame_whatsapp"
                    android:tint="@color/black" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bottom_fifth_frame_main_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/bottom_fifth_frame_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/call_main_relative"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp">

                        <ImageView
                            android:id="@+id/footer_call_image"
                            android:layout_width="@dimen/size_24"
                            android:layout_height="@dimen/size_24"
                            android:background="@color/twelve_frame_color_light"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_call"
                            android:tint="@color/white" />


                        <com.brandshaastra.utils.CustomTextViewBold
                            android:id="@+id/business_call_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/footer_call_image"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:singleLine="true"
                            android:textColor="@color/third_frame_text_color"
                            android:textSize="@dimen/size_9dp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/mail_main_relative"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/footer_website_image"
                            android:layout_width="@dimen/size_24"
                            android:layout_height="@dimen/size_24"
                            android:layout_centerVertical="true"
                            android:background="@color/twelve_frame_color"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_website"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/footer_website_image"
                            android:orientation="vertical">

                            <com.brandshaastra.utils.CustomTextViewBold
                                android:id="@+id/business_mail_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:singleLine="true"
                                android:textColor="@color/third_frame_text_color"
                                android:textSize="@dimen/size_9dp" />

                            <com.brandshaastra.utils.CustomTextViewBold
                                android:id="@+id/business_website_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/business_mail_details"
                                android:layout_toRightOf="@+id/footer_website_image"
                                android:ellipsize="end"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:singleLine="true"
                                android:textColor="@color/third_frame_text_color"
                                android:textSize="@dimen/size_9dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/location_main_relative"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/footer_location_image"
                            android:layout_width="@dimen/size_24"
                            android:layout_height="@dimen/size_24"
                            android:layout_centerVertical="true"
                            android:background="@color/twelve_frame_color_light"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_location"
                            android:tint="@color/white" />

                        <com.brandshaastra.utils.CustomTextViewBold
                            android:id="@+id/business_location_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/footer_location_image"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:text="raj.chauhan.1606@gmail.com"
                            android:textColor="@color/third_frame_text_color"
                            android:textSize="@dimen/size_9dp" />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>
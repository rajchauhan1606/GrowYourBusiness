<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >



    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.brandshaastra.utils.CustomTextViewBold
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="@color/blue_color"/>

        <com.brandshaastra.utils.CustomTextViewBold
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Enter email id registered on digital butler"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_edittext_bg">


            <ImageView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@drawable/ic_mail_grey"/>

            <com.brandshaastra.utils.CustomEditText
                android:id="@+id/edt_mono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="30"
                android:hint="@string/email_address"
                android:textColor="@color/black"
                android:text="asASSCscS" />
        </LinearLayout>
    </LinearLayout>

    <View


        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black"></View>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.brandshaastra.utils.CustomTextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_cancel"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/blue_color"/>
        <View
            android:padding="10dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black"></View>
        <com.brandshaastra.utils.CustomTextView
            android:layout_width="wrap_content"

            android:id="@+id/txt_continue"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="@color/blue_color"/>
    </LinearLayout>
</LinearLayout>
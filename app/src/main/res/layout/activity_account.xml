<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg_color">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomnavigation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.brandshaastra.utils.CustomTextViewBold
                    android:id="@+id/update_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/text_size_20"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="Update Profile"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/text_size_20"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/service_first_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_50dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.brandshaastra.utils.CircleImageView
                        android:id="@+id/account_img"
                        android:layout_width="@dimen/size_100dp"
                        android:layout_height="@dimen/size_100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_border"
                        android:padding="3dp"
                        android:src="@drawable/brand_shaastra_logo" />

                    <com.brandshaastra.utils.CustomTextViewBold
                        android:id="@+id/account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/text_size_15"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_24" />

                    <com.brandshaastra.utils.CustomTextViewBold
                        android:id="@+id/account_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_first_linear"
                    android:layout_marginTop="@dimen/text_size_20"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_10dp">

                    <LinearLayout
                        android:id="@+id/subscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:src="@drawable/dollar"
                            app:tint="@color/theme_color" />

                        <com.brandshaastra.utils.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:gravity="center_vertical"
                            android:text="Subscription"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:src="@drawable/privacy"
                            app:tint="@color/theme_color" />

                        <com.brandshaastra.utils.CustomTextView
                            android:id="@+id/privacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:gravity="center_vertical"
                            android:text="Privacy Policy"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:src="@drawable/tearms_condition"
                            app:tint="@color/theme_color" />

                        <com.brandshaastra.utils.CustomTextView
                            android:id="@+id/tearms_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:gravity="center_vertical"

                            android:text="Terms &amp; Conditions"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rate_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:src="@drawable/ic_baseline_star_24"
                            app:tint="@color/theme_color" />

                        <com.brandshaastra.utils.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:gravity="center_vertical"

                            android:text="Rate Us"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:src="@drawable/ic__share"
                            app:tint="@color/theme_color" />

                        <com.brandshaastra.utils.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:gravity="center_vertical"

                            android:text="Share App"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:src="@drawable/contact_us"
                            app:tint="@color/theme_color" />

                        <com.brandshaastra.utils.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:gravity="center_vertical"
                            android:text="Contact Us"
                            android:textColor="@color/white"

                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/account_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:src="@drawable/logout"
                            app:tint="@color/theme_color" />

                        <com.brandshaastra.utils.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:gravity="center_vertical"
                            android:text="Logout"
                            android:textColor="@color/white"

                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/activity_bg_color"
            app:itemIconTint="@drawable/bottom_navigationview_bg"
            app:itemTextColor="@drawable/bottom_navigationview_bg"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu" />

    </RelativeLayout>
</layout>
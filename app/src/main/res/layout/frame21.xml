<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/frame21"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/border_frame"

        tools:context=".ui.activity.ImageCanvasActivity">

        <RelativeLayout
            android:id="@+id/twentyone_frame_relative"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <RelativeLayout
                android:id="@+id/business_logo_relative"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/dimen_5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/simple_curved_relative_5dp">

                        <ImageView
                            android:id="@+id/business_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/brand_shaastra_logo" />

                    </RelativeLayout>

                </RelativeLayout>


                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_circuler_bg"
                    android:src="@drawable/_cancel"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/size_15dp">

                <com.brandshaastra.utils.CustomTextViewBold
                    android:id="@+id/frame_seventeenth_follow_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_toLeftOf="@+id/business_socialmedia_image_relative"
                    android:text="Follow Us :" />

                <RelativeLayout
                    android:id="@+id/business_socialmedia_image_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/social_image_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/facebook_icon"
                            android:layout_width="@dimen/text_size_15"
                            android:layout_height="@dimen/text_size_15"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:id="@+id/wathsapp_icon"
                            android:layout_width="@dimen/text_size_15"
                            android:layout_height="@dimen/text_size_15"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/whatsapp" />

                        <ImageView
                            android:id="@+id/twitter_icon"
                            android:layout_width="@dimen/text_size_15"
                            android:layout_height="@dimen/text_size_15"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/twitter" />

                        <ImageView
                            android:id="@+id/insta_icon"
                            android:layout_width="@dimen/text_size_15"
                            android:layout_height="@dimen/text_size_15"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/instagram" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:layout_alignRight="@+id/social_image_linear"
                        android:background="@drawable/blue_circuler_bg"
                        android:src="@drawable/_cancel"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bottom_twenty_frame_main_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/left_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_weight="1.1">

                        <RelativeLayout
                            android:id="@+id/call_main_relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">

                            <com.brandshaastra.utils.CustomTextViewBold
                                android:id="@+id/business_call_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:alpha="0.8"
                                android:background="@drawable/ic_left_bottom_bg"
                                android:ellipsize="end"
                                android:gravity="center_horizontal|center_vertical"
                                android:singleLine="true"
                                android:text="+911234567890"
                                android:textColor="@color/third_frame_text_color"
                                android:textSize="@dimen/size_9dp" />

                            <ImageView
                                android:id="@+id/footer_call_image"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:background="@drawable/ic_frame21_image_bg"
                                android:padding="2dp"
                                android:src="@drawable/frame21_left_image" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/right_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/mail_main_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/call_main_relative"
                            android:layout_alignParentRight="true"
                            android:gravity="right">


                            <com.brandshaastra.utils.CustomTextViewBold
                                android:id="@+id/business_mail_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:alpha="0.8"
                                android:background="@drawable/ic_right_bottom_bg"
                                android:ellipsize="end"
                                android:gravity="center_horizontal|center_vertical"
                                android:singleLine="true"
                                android:text="raj.chauhan.1606@gmail.com"
                                android:textColor="@color/third_frame_text_color"
                                android:textSize="@dimen/size_9dp" />

                            <ImageView
                                android:id="@+id/footer_mail_image"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="-30dp"
                                android:layout_toRightOf="@+id/business_mail_details"
                                android:background="@drawable/ic_frame21_image_bg"
                                android:padding="2dp"
                                android:src="@drawable/frame21_right_imahe" />


                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>
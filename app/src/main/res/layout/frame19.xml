<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/frame19"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/border_frame"

        tools:context=".ui.activity.ImageCanvasActivity">

        <RelativeLayout
            android:id="@+id/sixteenth_frame_relative"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <RelativeLayout
                android:id="@+id/business_logo_relative"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/dimen_5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/simple_curved_relative_5dp">

                        <ImageView
                            android:id="@+id/business_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/brand_shaastra_logo" />

                    </RelativeLayout>

                </RelativeLayout>


                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_circuler_bg"
                    android:src="@drawable/_cancel"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/size_15dp">

                <com.brandshaastra.utils.CustomTextViewBold
                    android:id="@+id/frame_seventeenth_follow_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_toLeftOf="@+id/business_socialmedia_image_relative"
                    android:text="Follow Us :" />

                <RelativeLayout
                    android:id="@+id/business_socialmedia_image_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/social_image_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/facebook_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:id="@+id/wathsapp_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/whatsapp" />

                        <ImageView
                            android:id="@+id/twitter_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/twitter" />

                        <ImageView
                            android:id="@+id/insta_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/instagram" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:layout_alignRight="@+id/social_image_linear"
                        android:background="@drawable/blue_circuler_bg"
                        android:src="@drawable/_cancel"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bottom_sixteenth_frame_main_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true">


                    <RelativeLayout
                        android:id="@+id/footer_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:alpha="0.8"
                        android:background="#4de4c9">

                        <TextView
                            android:id="@+id/frame19_view1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:id="@+id/bottom_first_frame_first_linear"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dimen_5dp">


                            <RelativeLayout
                                android:id="@+id/call_main_relative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:layout_toLeftOf="@+id/frame19_verti_line"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/footer_call_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/ic_sixth_frame_bg"
                                    android:padding="@dimen/dimen_5dp"
                                    android:src="@drawable/ic_call"
                                    android:tint="@color/black"
                                    android:visibility="gone" />

                                <com.brandshaastra.utils.CustomTextView
                                    android:id="@+id/business_call_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:ellipsize="end"
                                    android:gravity="center_horizontal"
                                    android:paddingLeft="@dimen/dimen_5dp"
                                    android:singleLine="true"
                                    android:text="+911234567890"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/size_9dp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/frame19_verti_line"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@color/black" />

                            <RelativeLayout
                                android:id="@+id/mail_main_relative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:layout_toRightOf="@+id/frame19_verti_line"
                                android:gravity="center"
                                android:paddingTop="0dp">

                                <ImageView
                                    android:id="@+id/footer_mail_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_sixth_frame_bg"
                                    android:padding="@dimen/dimen_5dp"
                                    android:src="@drawable/ic_pink_mail_28"
                                    android:tint="@color/black"
                                    android:visibility="gone" />

                                <com.brandshaastra.utils.CustomTextView
                                    android:id="@+id/business_mail_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:ellipsize="end"
                                    android:gravity="center_horizontal"
                                    android:paddingLeft="@dimen/dimen_5dp"
                                    android:singleLine="true"
                                    android:text="+911234567890"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/size_9dp" />
                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/location_main_relative"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/curved_blank_relative_5dp"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5dp">

                        <ImageView
                            android:id="@+id/footer_location_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_location_on_24" />

                        <com.brandshaastra.utils.CustomTextView
                            android:id="@+id/business_location_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/footer_location_image"
                            android:drawablePadding="@dimen/dimen_10dp"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:singleLine="true"
                            android:text="kjsdbcjhsda s"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_9dp" />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>